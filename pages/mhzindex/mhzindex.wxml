<!--pages/mhzindex/mhzindex.wxml-->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}" wx:key="">
    <swiper-item>
      <image mode='widthFix' src="{{filepath}}{{item.url}}" class="slide-image" />
    </swiper-item>
  </block>
</swiper>
<!--导航-->
<view class='nav'>
  <navigator url="PressReleases/PressReleases?title=navigate" hover-class="none">
  <view class='navView'>
    <image class='navImg' mode='widthFix' src='/imgs/xwgg.jpg'></image>
    <text class='navText'>新闻公告</text>
  </view>
   </navigator>
  <navigator url="HotCourses/HotCourses?category_id=0" hover-class="none">
  <view class='navView'>
    <image class='navImg' mode='widthFix' src='/imgs/rmkc.jpg'></image>
    <text class='navText'>热门课程</text>
  </view>
  </navigator>
    <navigator url="examination/examination?state=1" hover-class="none">
  <view class='navView'>
    <image class='navImg' mode='widthFix' src='/imgs/bmbk.jpg'></image>
    <text class='navText'>报名报考</text>
  </view>
  </navigator>
   <navigator url="../mine/MySubject/MySubject?title=navigate" hover-class="none">
  <view class='navView'>
    <image class='navImg' mode='widthFix' src='/imgs/wdkc.jpg'></image>
    <text class='navText'>我的课程</text>
  </view>
  </navigator>
</view>

<!--热门课程-->
<view class='title'>
  <image mode='widthFix' class='lv' src='/imgs/lv.jpg'></image>
  <text>热门课程</text>
</view>
<!--导航条-->
<view class="navbar">
  <text wx:for="{{categorys}}" data-idx='{{index}}' class="item {{currentTab==index ? 'active' : ''}}"  bindtap="navbarTap">{{item}}</text>
</view>
<view hidden="">
  <block wx:for="{{product}}">
    <view wx:if="{{index < 3}}" class='TuiJian' bindtap='xiangqing' data-id="{{item.product_id}}">
      <image wx:if="{{item.product_banner[0].url}}" class='TJimg' src='{{filepath}}{{item.product_banner[0].url}}'></image>
      <image wx:else class='TJimg' mode='widthFix' src='/imgs/img1.jpg'></image>
      <text class='tjtitle'>{{item.product_name}}</text>
      <text class='tjcont'>{{item.product_introduce}}</text>
      <text class='time'><text></text>课程时长：{{item.product_times}}</text>
      <text class='price'>￥{{item.product_money}}</text>
    </view>
  </block>
</view>
<view wx:if="{{num > 3}}" bindtap="hotke" data-id="0" class='more'>
  <text class='more'>查看更多></text>
</view>

