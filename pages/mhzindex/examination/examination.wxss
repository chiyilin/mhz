/* pages/mhzindex/examination/examination.wxss */

.swiper-tab {
  width: 100%;
  line-height: 75rpx;
  border-bottom: #dcdcdc solid 1px;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  color: #777;
  border-bottom: 0rpx;
  text-align: center;
  width: 20%;
  margin-left: 20%;
}


.on {
  color: #666;
  border-bottom: 2px solid #727171;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

.weui-cells__title {
  position: relative;
}

.title {
  font-size: 28rpx;
  color: #5f5f5f;
  position: absolute;
  left: 80rpx;
  top: 75rpx;
}

.sanjiao {
  width: 73rpx;
  position: absolute;
  top: 65rpx;
  left: 583rpx;
  z-index: 3;
}

.select_box {
  background: #fff;
  border-radius: 8rpx;
  border: 1px #dcdcdc solid;
  width: 416rpx;
  margin: 30rpx auto;
  position: relative;
  top: 60rpx;
  left: 70rpx;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border: 1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 30rpx;
  flex: 1;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 70rpx;
  width: 100%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 2;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

.bottom {
  position: relative;
}

.content {
  padding: 90rpx 80rpx;
  display: block;
  font-size: 24rpx;
  color: #5f5f5f;
  margin-top: 60rpx;
  line-height: 53rpx;
}

.Btitle {
  font-size: 28rpx;
  color: #5f5f5f;
  position: absolute;
  left: 80rpx;
  top: 50rpx;
}

.time {
  padding: 0rpx 80rpx;
  display: block;
  font-size: 24rpx;
  margin-bottom: 34rpx;
  color: #5f5f5f;
}

.address {
  padding: 0rpx 80rpx;
  display: block;
  color: #5f5f5f;
  font-size: 24rpx;
}

.fuxuan {
  margin-top: 30rpx;
  margin-left: 200rpx;
}

.tiaokuan {
  font-size: 24rpx;
  color: #5f5f5f;
}

.foot {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
}

.foot view {
  width: 50%;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
}

.zuo {
  background: #fff;
  color: #5f5f5f;
}

.red {
  color: #fc0000;
}

.foot .you {
  background-color: #aeb184;
  color: #fff;
}

picker{
  position: relative;
  top: 75rpx;
  left: 200rpx;
  font-size: 28rpx;
  color:  #5f5f5f;
}