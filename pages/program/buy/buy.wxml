<!--pages/program/buy/buy.wxml-->
<block wx:if="{{!flag}}">
  <view class="section tc">
    <video src="{{product.product_video_src}}" bindplay="bindplay" bindtimeupdate='bindtimeupdate' wx:if="{{!isEnd}}"></video>
    <video wx:else src="{{product.product_video_src}}"></video>
    <!-- <view class='shikan'>
      <image class='bofang' mode='widthFix' src='/imgs/bofang.png'></image>
      <text class='sktext'>试看</text>
    </view> -->
  </view>
  <view class='share clearfix'>
    <view class='fl'>
      <text class='minW' style='font-size:28rpx;font-weight:bold; display:block'>{{product.product_name}}</text>
      <image wx:if="{{userdingy==0}}" bindtap="dingy" data-productid="{{product.product_id}}" data-userdingy='0' class='dy fl' mode='widthFix' src='/imgs/dy.jpg'></image>
      <image wx:else class='dy fl' bindtap="dingy" data-productid="{{product.product_id}}" data-userdingy='1' mode='widthFix' src='/imgs/dingyue.jpg'></image>
      <text class='price fl'>{{dingynum}}人已订阅</text>
    </view>
    <view class='cllo fr'>
      <!-- <label bindtap="share"></label> -->
      <image wx:if="{{usershouc==0}}" bindtap="shouc" data-productid="{{product.product_id}}" data-usershouc='0' mode='widthFix' src='/imgs/xing.png'></image>
      <image wx:else mode='widthFix' bindtap="shouc" data-productid="{{product.product_id}}" data-usershouc='1' src='/imgs/xing1.png'></image>
      <text wx:if="{{usershouc==0}}" bindtap="shouc" data-productid="{{product.product_id}}" data-usershouc='0'>未收藏</text>
      <text wx:else bindtap="shouc" data-productid="{{product.product_id}}" data-usershouc='1'>已收藏</text>
      <button class='fen' open-type='share'>
      </button>
      <image mode='widthFix' src='/imgs/share.png'></image>
      <text>分享</text>

    </view>
  </view>

  <view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">课程简介</view>
    <!-- <view wx:if="{{product.taoc_id==null}}" class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}">无套餐组合</view> -->
    <view wx:if="{{product.taoc_id!=null}}" class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-productid='{{product.product_id}}' data-current="1" bindtap="swichNav">套餐组合</view>
  </view>
  <view class="weui-cells__title" hidden="{{!isShow}}">

    <!-- 课程简介 -->
    <block wx:for="{{product.product_introduce}}">
      <text class='jianjie' wx:if="{{item.text}}">{{item.text}}</text>
      <image style='width:750rpx' wx:if="{{item.image}}" src='{{item.image}}' mode='widthFix'></image>
    </block>
  </view>
  <view class="weui-cells__title" hidden="{{isShow}}">
    <block wx:for="{{producttaoc}}">
      <view wx:if="{{product.product_id==item.product_id}}" bindtap="looktaoc" data-id='{{item.product_id}}' class='TuiJian clearfix'>
        <!-- style="border:1rpx #ADB183 solid" -->
        <image wx:if="{{item.product_cover}}" class='TJimg' mode='widthFix' src='{{filepath}}{{item.product_cover}}'></image>
        <image wx:else class='TJimg' mode='widthFix' src='/imgs/img1.jpg'></image>
        <text class='price'>{{item.product_name}}</text>
        <text class='time'>课程时长：{{item.product_times}}</text>
        <image class='isplay' mode='widthFix' src='/imgs/isplay.png'></image>
      </view>
      <view wx:else bindtap="looktaoc" data-id='{{item.product_id}}' class='TuiJian clearfix'>
        <image wx:if="{{item.product_cover}}" class='TJimg' mode='widthFix' src='{{filepath}}{{item.product_cover}}'></image>
        <image wx:else class='TJimg' mode='widthFix' src='/imgs/img1.jpg'></image>
        <text class='price'>{{item.product_name}}</text>
        <text class='time'>课程时长：{{item.product_times}}</text>
      </view>
    </block>
    <block wx:for="{{taocInfo.taoc_content}}">
      <text class='jianjie' wx:if="{{item.text}}">{{item.text}}</text>
      <image style='width:750rpx' wx:if="{{item.image}}" src='{{item.image}}' mode='widthFix'></image>
    </block>
  </view>

  <view class='attention'>
    <image mode='widthFix' class='lv' src='/imgs/lv.jpg'></image>
    <text>讲师信息</text>
    <view class='teacher-info clearfix'>
      <view class='sb fl'>
        <image class="teacher-face" src='{{filepath}}{{product.teacher.teacher_face}}'></image>
        <text class='cont'>{{product.teacher.teacher_name}}</text>
      </view>
      <label class='teacher-text'>
        <view style='width:500rpx' class='fr '>
          <text class='cont'>{{product.teacher.teacher_introduce}}</text>
        </view>
      </label>
    </view>
  </view>
  <view class='attention'>
    <image mode='widthFix' class='lv' src='/imgs/lv.jpg'></image>
    <text>注意事项</text>
    <text class='cont'>{{product.product_zysx}}</text>
  </view>
  <view class='attention pinglun clearfix'>
    <image mode='widthFix' class='lv' src='/imgs/lv.jpg'></image>
    <text>评论区</text>
    <text class='more fr' bindtap="toTalk" data-id="{{product.product_id}}" data-taocid="{{product.taoc_id}}" data-current='{{currentTab}}'>更多></text>
  </view>
  <view wx:if="{{productlistcomment}}">
    <view class='bottom clearfix'>
      <image class='fl tou' src='{{productlistcomment.user.face}}'></image>
      <text class='name'>{{productlistcomment.user.nick_name}}</text>
      <text class='date'>{{productlistcomment.list_comment_add_time_str}}</text>
      <text class='content fr'>{{productlistcomment.list_comment_content}}</text>
    </view>
  </view>
  <view wx:else>
    <view class='bottom clearfix'>
      <text class='name'></text>
    </view>
  </view>
  <view class='btn clearfix' bindtap='goumai' data-current="{{currentTab}}" data-id="{{product.product_id}}" data-taocid="{{product.taoc_id}}" wx:if="{{!isPay&&currentTab==0}}">
    <text class='fl' wx:if="{{show_money==1}}">￥{{taocanMoney?taocanMoney:product.product_money}}</text>
    <text class='fr' style='text-align:right;margin-top:0;'>立即购买</text>
  </view>
  <view class='btn clearfix' bindtap='goumai' data-current="{{currentTab}}" data-id="{{product.product_id}}" data-taocid="{{product.taoc_id}}" wx:if="{{!taocisPay&&currentTab==1}}">
    <text class='fl' wx:if="{{show_money==1}}">￥{{taocInfo.taoc_money?taocInfo.taoc_money:product.product_money}}</text>
    <text class='fr' style='text-align:right;margin-top:0;'>套餐购买</text>
  </view>
  <!-- <view class='btn'><text>立即播放</text></view> -->
</block>
<view bindtap='fanhui' class='back'>返回首页</view>