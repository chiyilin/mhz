.clo {
background-color: #fff;
position: relative;
height: 206rpx;
overflow: hidden;
padding: 0 30rpx;
}

.clo::after {
position: absolute;
bottom: 0;
left: 0;
width: 100%;
height: 1px;
background-color: #e6e6e6;
content: ' ';
display: block;
transform: scaley(0.5);
}

.cloImg {
width: 280rpx;
height: 160rpx;
float: left;
margin-right: 30rpx;
margin-top: 20rpx;
border-radius: 3px;
}

.cloText {
font-size: 28rpx;
display: block;
margin-top: 20rpx;
color: #605f5f;
}

