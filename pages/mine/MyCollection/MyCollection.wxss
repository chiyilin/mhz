.clo {
  padding: 48rpx 55rpx;
  background-color: #fff;
  position: relative;
}

.clo::after {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background-color: #e6e6e6;
  content: ' ';
  display: block;
  transform: scaley(0.5);
}

.cloImg {
  width: 199rpx;
  height: 120rpx;
  float: left;
  margin-right: 34rpx;
}

.cloText {
  font-size: 26rpx;
  display: block;
  margin-right: 40rpx;
}

.dingyue {
  width: 17rpx;
  margin-right: 15rpx;
  vertical-align: middle;
}

.dyText {
  font-size: 24rpx;
  vertical-align: middle;
  color: #9e9e9e;
}

.xing {
  width: 36rpx;
  margin-top: -30rpx;
}
