.vid{
  padding: 47rpx 49rpx 47rpx 56rpx;
  position: relative;
  background-color: #fff;
}
.vid::after{
  position: absolute;
bottom: 0;
left: 0;
width: 100%;
height: 1px;
background-color: #e6e6e6;
content: ' ';
display: block;
transform: scaley(0.5);
}
