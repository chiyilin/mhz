<!--pages/mine/MyTeam/MyTeam.wxml-->
<view class='top'>
  <view class='tuijian'>
    <image mode='widthFix' src='/imgs/teamimg1.jpg'></image>
    <text>我的推荐人：{{fidUserInfo.nick_name}}</text>
  </view>
  <view class='mt'>
    <image mode='widthFix' src='/imgs/phone.jpg'></image>
    <text>手机号：{{fidUserInfo.user_mobile}}</text>
  </view>
</view>
<view class='bottom'>
  <block wx:for="{{myTeam}}">
    <view class='list'>
      <text class='num'>{{index+1}}</text>
      <view class='tuijian'>
        <image mode='widthFix' src='/imgs/name.jpg'></image>
        <text>姓名：{{item.nick_name}}</text>
      </view>
      <view class='mt'>
        <image mode='widthFix' src='/imgs/phone.jpg'></image>
        <text>手机号：{{item.user_mobile}}</text>
      </view>
      <view class='mt'>
        <image mode='widthFix' src='/imgs/dhmximg3.jpg'></image>
        <text>加入时间：{{item.user_add_time}}</text>
      </view>
    </view>
  </block>
</view>