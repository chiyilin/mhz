<!--pages/index/index.wxml-->
<swiper autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{apiData.banner}}" wx:key="">
    <swiper-item bindtap="banner" data-index="{{index}}">
      <image mode='aspectFill' src="{{filepath}}{{item.url}}" class="slide-image" />
    </swiper-item>
  </block>
</swiper>
